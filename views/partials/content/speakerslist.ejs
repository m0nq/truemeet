<artcile class="speakerslist">
  <section class="layout">
    <div class="speakers">
      <% artists.forEach(function (item) { %>
        <article class="artist group">
          <h3><%= item.title %> <span class="small"> with <a href="/speakers/<%= item.shortname %>"><%= item.name %></a></span></h3>
          <p><a href="/speakers/<%= item.shortname %>"><img src="/images/speakers/<%= item.shortname %>_tn.jpg" class="speaker" alt="Photo of <%= item.name %>"/></a></p>
        </article>
      <% }); %>
    </div>
  </section>
</artcile>
